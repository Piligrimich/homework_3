import time


def my_decorator(call_count, start_sleep_time, factor, border_sleep_time):
    def real_decorator(func):
        def wrapper(*args, **kwargs):
            print(f'Количество запусков = {call_count}')
            print('Начало работы')
            t = start_sleep_time
            for i in range(int(call_count)):
                print(f'Запуск номер {i+1}. Ожидание: {t} секунд. Результат декорируемой функции = {func(*args, **kwargs)}')
                if i != call_count-1:
                    time.sleep(t)
                    t = t*(2**factor)
                    if t >= border_sleep_time:
                        t = border_sleep_time

            print('Конец работы')
        return wrapper
    return real_decorator


@my_decorator(call_count=3, start_sleep_time=2, factor=2, border_sleep_time=10)
def multiplier(number: int):
    return number * 2


if __name__ == '__main__':
    multiplier(5)
